<h1>Log in</h1>

<%= form_tag '/login' do %>
  <form>
    <div class="form-group">
      Email: <%= email_field_tag :email, "", class: "form-control" %>
    </div>
    <div class="form-group">
      Password: <%= password_field_tag :password, "",  class: "form-control" %>
    </div>

    <%= submit_tag "Log in", class: 'btn btn-primary'%>
  </form>
<% end %>
